{
     "compilerOptions": {
          "module": "NodeNext",
          "moduleResolution": "NodeNext",
          "target": "ES2020",
          "esModuleInterop": true,
          "skipLibCheck": true,
          "forceConsistentCasingInFileNames": true,
          "strict": true,
          "noImplicitAny": false,
          "resolveJsonModule": true,
          "outDir": "./dist",
          "rootDir": "./"
     },
     "include": [
          "./"
     ],
     "exclude": [
          "node_modules"
     ]
}